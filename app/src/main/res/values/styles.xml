<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全屏 -->
    <style name="FullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/common_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="default_icon_style">
        <item name="android:layout_width">@dimen/default_icon_width</item>
        <item name="android:layout_height">@dimen/default_icon_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="item_select_album_tv_count_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/item_select_album_tv_count_text_size</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/default_tv_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/item_select_album_tv_count_text_margin_start</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="item_select_album_iv_count_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/default_icon_color_filter</item>
    </style>

    <style name="keyboard_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/keyboard_height</item>
    </style>

    <!--
    android:id="@+id/keyboard_key_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/keyboard_text_color"
            android:textSize="@dimen/keyboard_text_size"
    -->
    <style name="keyboard_grid_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
    </style>

    <!-- 弹出框动画 由下至上 -->
    <style name="ActivityStyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
        <!-- 退出时的动画 -->
    </style>

    <!-- Setting -->
    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:textColor">@color/default_tv_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!--        <item name="colorControlNormal">@color/indigo</item>-->
        <item name="colorControlActivated">@color/default_theme_color</item>
    </style>
</resources>
